<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#6c9f9a9a"
        app:cardCornerRadius="@dimen/cornerRadius"
        android:layout_marginTop="@dimen/marginTop">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/heightSroll">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/heightLinear"
                android:orientation="vertical"
                android:padding="@dimen/paddingLinear">

                <ImageView
                    android:id="@+id/img_berita"
                    android:layout_width="@dimen/widthImage"
                    android:layout_height="@dimen/heightImage"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/judul_berita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/marginTop"
                    android:gravity="center_horizontal"
                    android:text="@string/judul_berita"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textSizeJudul"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tanggal_posting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margintoptext"
                    android:fontFamily="sans-serif"
                    android:text="@string/tanggal"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textSizeTxt"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/isi_berita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop"
                    android:fontFamily="sans-serif"
                    android:text="@string/isi"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textSizeTxt"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/penulis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop"
                    android:fontFamily="sans-serif"
                    android:text="@string/penulis"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textSizeTxt"
                    android:textStyle="normal" />

            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

</LinearLayout>
